<body>
   <form action="">
    <label for="">Enter a number:</label>
    <input type="text" id="num"><br><br>

    <input type="button" value="cose-1" onclick="calculate()">
    <input type="button" value="sine-1" onclick="calculate2()">
   </form>

   <p><span id="result"></span></p>
   <p><span id="result2"></span></p>
   <p><span id="result3"></span></p>
</body>
  <script>
    //calculate the inverse of the cose.
    function calculate(){
      let number=document.getElementById("num").value;
   document.getElementById('result').innerHTML=Math.acos(number);
    }
    //calculate the inverse of the sine.
    function calculate2(){
      let number=document.getElementById("num").value;
   document.getElementById("result2").innerHTML=Math.asin(number);
    }
  </script>
